<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
	"-//Apache Struts//XWork Validator 1.0.3//EN" 
	"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">


<validators>
	<validator type="requiredstring">
		<param name="fieldName">firstName</param>
		<message>First name is required</message>
	</validator>
	<validator type="requiredstring">
		<param name="fieldName">lastName</param>
		<message>Last name is required</message>
	</validator>
	<validator type="required">
		<param name="fieldName">gender</param>
		<message>Gender is required</message>
	</validator>
	<field name="age">
		<field-validator type="required">
			<message>Age is required</message>
		</field-validator>
		<field-validator type="int">
			<param name="age">18</param>
			<message>Age should be above ${min}</message>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring">
			<message>E-Mail is required</message>
		</field-validator>
		<field-validator type="email">
			<message>Must provide a valid E-Mail</message>
		</field-validator>
	</field>
</validators>